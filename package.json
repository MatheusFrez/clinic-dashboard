{
  "name": "desafio-matheus-frez",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "jest -i",
    "test-watch": "jest -i --watch",
    "docker-build": "docker build -t vuejs-cookbook/desafio-matheus-frez .",
    "docker-run": "docker run -it -p 8080:8080 --rm --name desafio-matheus-frez-1 vuejs-cookbook/desafio-matheus-frez",
    "docker": "yarn run docker-build && yarn run docker-run"
  },
  "dependencies": {
    "axios": "^0.23.0",
    "chart.js": "2",
    "core-js": "^3.6.5",
    "luxon": "^2.0.2",
    "randomcolor": "^0.6.2",
    "vue": "^2.6.11",
    "vue-chartjs": "^3.5.1",
    "vuetify": "^2.4.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "^4.5.14",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.2.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^6.2.2",
    "jest": "26",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.12.0",
    "prettier": "^2.2.1",
    "sass": "~1.32.0",
    "sass-loader": "^10.0.0",
    "vue-cli-plugin-vuetify": "~2.4.3",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.7.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "jest -i --passWithNoTests",
      "git add"
    ]
  }
}
